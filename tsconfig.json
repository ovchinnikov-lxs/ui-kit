{
    "extends": "@vue/tsconfig/tsconfig.web.json",
    "include": [
        "env.d.ts",
        "global.d.ts",
        "src/**/*",
        "src/**/*.vue"
    ],
    "exclude": [
        "node_modules"
    ],
    "compilerOptions": {
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "./src/*"
            ]
        },
        "declaration": true,
        "types": [
            "jest",
            "node",
            "vite/client"
        ],
    },
    "references": [
        {
            "path": "./tsconfig.config.json"
        }
    ]
}
